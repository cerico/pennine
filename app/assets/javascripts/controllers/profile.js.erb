scenic.controller("ProfileController", [ '$scope','$location','$http', function($scope,$location,$http) {

  $http.get($location.$$absUrl + '.json').success (function (data){
    $scope.user = data
    if ($scope.user.loggedinuser && $scope.user.id === $scope.user.loggedinuser.id) {
      $scope.bookmarkchoice = "showfaved"
      $scope.loggedinstate = "thatsme"
    }
    else{
      $scope.bookmarkchoice = "showcompleted"
    }
  })


  $scope.changeBookmarkView = function (state) {
    if (state == 'added'){
      $scope.bookmarkchoice = "showadded"
      $(".seeadded a").addClass("current")
      $(".seecompleted a").removeClass("current")
      $(".seefaved a").removeClass("current")

    }
    else if (state == 'faved') {
      $scope.bookmarkchoice = "showfaved"
      $(".seecompleted a").removeClass("current")
      $(".seefaved a").addClass("current")
      $(".seeadded a").removeClass("current")
    }
    else if (state == 'completed') {
      $scope.bookmarkchoice = "showcompleted"
      $(".seefaved a").removeClass("current")
      $(".seecompleted a").addClass("current")
      $(".seeadded a").removeClass("current")
    }
  }



}])