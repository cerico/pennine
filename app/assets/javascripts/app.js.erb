scenic = angular.module('scenic',['controllers','templates','ui.router',])

controllers = angular.module('controllers',[])

scenic.config(['$stateProvider','$urlRouterProvider','$locationProvider', function ($stateProvider, $urlRouterProvider, $locationProvider){


  $urlRouterProvider.otherwise('/trails')


  $stateProvider.state('trails', { 
      url: '/trails',
      templateUrl: 'trailsindex.html',
      controller: 'TrailsIndexController'
  }),
  $stateProvider.state('trail', {
      url: '/trails/:id',
      templateUrl: 'trail.html',
      controller: 'TrailsController'
  }),
  $stateProvider.state('profile', {
      url: '/profile',
      templateUrl: 'profile.html',
      controller: 'ProfileController'
  });


    }])