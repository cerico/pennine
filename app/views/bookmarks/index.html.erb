<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>Trail</th>
    <th>User</th>
    <th>Completed</th>
    <th>Favourited</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><%= bookmark.trail_id %></td>
    <td><%= bookmark.user_id %></td>
    <td><%= bookmark.completed %></td>
    <td><%= bookmark.favourited %></td>
    <td><%= bookmark.rating %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

