<!DOCTYPE html>
<html>
<head>
  <title>Pennine</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if current_user %>
  <script>
    var current_user = <%=raw current_user.to_json  %>
  </script>

  <% end %>

  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

  <link href='https://fonts.googleapis.com/css?family=Raleway+Dots' rel='stylesheet' type='text/css'>
</head>
<body ng-app="scenic">
  <div class="backgroundimage">
    <%= image_tag("backdrop6.jpg") %>
  </div>
  <div class="background">
   <div class="header">
    <div class="navleft" ><!-- for tablets-->
      <a class="btn-navbar dark" href="#" class="hamburger hamInactive">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="phonemenu inactive">
        <nav class="phonelinks" > 

          <div class="primary"><%= link_to "new", new_trail_path %></div>
          <div class="secondary">Upload your own trail to the site</div>
          
          <a href="map.html">
            <div class="primary">Map</div>
            <div class="secondary">Systemwide trail map</div>
          </a>
          
          <div class="primary"><%= link_to "trails", trails_path, :class => "active" %></div>
          <div class="secondary">All available trails</div>
          
          <a href="profile.html">
            <div class="primary">My Profile</div>
            <div class="secondary">Bookmarks, Completed and Uploaded Trails</div>
          </a>
          <a href="index.html">
            <div class="primary">Home</div>
            <div class="secondary">Back to home page</div>
          </a>
          <a href="logout.html">
            <div class="primary">Logout</div>
          </a>
        </nav><!-- close of links -->
      </div><!-- close of nav-menu max-width isActive-->
    </div><!-- close of navleft-->


    <ul class="toplinks" ng-init="selectedLink = 'trails'">

      <li class="toptitle">scen.ic </li>


      <!-- <li class="toplink"><ng-class="{'active':selectedLink === 'new'}" ng-click="selectedLink = 'new'" ng-href="/#new">add a new trail</a></li> -->
        <li class="toplink"><a ng-class="{'active':selectedLink === 'new'}" ng-click="selectedLink = 'new'" ng-href="/#new">add a new trail</a></li>
      <li class="toplink"><a ng-class="{'active':selectedLink === 'map'}" ng-click="selectedLink = 'map'" ng-href="/#map">Map</a></li>
      <li class="toplink"><a ng-class="{'active':selectedLink === 'trails'}" ng-click="selectedLink = 'trails'" ng-href="/#trails">discover</li>
      <% if user_signed_in? %>      
      <li class="toplink"><a ng-class="{'active':selectedLink === 'profile'}" ng-click="selectedLink = 'profile'" ng-href="#users/<%=current_user.id%>"><%=current_user.name.split[0]%>'s profile</a></li>
      <% end %> 
      <% if user_signed_in? %>
        <li class="toplink"><%= link_to "sign out", destroy_user_session_path, :method => :delete %></li>
      <% else %>     
        <li class="toplink"><a ng-href="/#login">Sign In</a></li>
      <% end %> 
   </ul>

 </div>
 
 <ui-view></ui-view>
</div>
</body>
</html>
