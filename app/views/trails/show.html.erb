<div class="main" ng-controller="TrailsController">
 {{trail.user}}
  <div class="periscope">
    <h1 class="trailname">{{trail.name}} </h1>
  </div>
  <div class="bendychairactive clearfix">

    <div class="sidebar">
      <ul>

        <li><a class="current" href="#">{{ trail.distance}} Miles</a></li><li><a href="#">Ave Rating: {{trail.rating}} </a></li><li><a href="#">Ranking (4)</a></li>
     
        <li><a href="#">{{(trail.bookmarks|filter: {completed:true}).length}}  Hikers <i class="fa fa-check circle green"></i></a></li>
     
        <li><a href="#">{{(trail.bookmarks|filter: {favourited:true}).length}} Hikers <i class="fa fa-heart red"></i></a></li>
      </ul>
        

     
      </div>
      <div class="trailcontent">

        <div class="trailcontainer column-100" >
          <div class="wrapper clearfix">
            <% if @trail.photos.first %>
           

            <div class="mainphoto column-100" ng-repeat="photo in trail.photos|limitTo:1">
              <img class="trailphoto column-100" ng-src="{{photo.image.trailpage.url}}">
              <div class="individual_trail_photofooter">
                <span class="individual_trail_photofooter_left" >{{ trail.name }}</span>   
                <div class="individual_trail_photofooter_right">
                  <ul>
                    <li class="uploadedby"><a ng-href="/users/{{trail.user.id}}"><img class="userphoto" ng-src="{{trail.user.photo}}"></li>
                    <li>{{trail.user.name}}</a> </li>
                  </ul>
                </div> <!--close of footerright-->
                <div class="individual_trail_photofooter_mid">
                  <ul>                    
                      <li ng-show="favstate == 'faved'"><i ng-click="addFav('unfavit')" class="fa fa-heart red"></i></li>
                      <li ng-show="favstate == 'notfaved'"><i ng-click="addFav('favit')" class="fa fa-heart-o"></i></li>
                      <li ng-show="compstate == 'completed'"><i ng-click="addFav('undoneit')" class="fa fa-check circle green"></i></li>
                      <li ng-show="compstate == 'notcompleted'"><i ng-click="addFav('doneit')" class="fa fa-check circle"></i></li>
                  </ul>
                </div> <!-- close of footermid-->
              </div><!-- close of photofooter-->
            </div> <!--close of mainphoto-->
            <% end %>


            <div id="map_canvas" class="thetrailmap column-100">
              <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://my.ctrlq.org/maps/#roadmap|14|53.70910162841865|-2.095017117077651"></iframe>
            </div>

            <div class="morephotos column-100">
              <div ng-repeat="photo in trail.photos" class="extraphoto column-25"><a href="{{photo.image.wide.url}}"><img ng-src="{{photo.image.detail.url}}"></a>
              </div>
             
              <photo></photo>


            </div><!-- close of morephotos-->
            <div class="moreinfo column-100">Add more photos by clicking on, or dragging to, the area below</div>
            <form  id="media-dropzone" class="dropzone column-50" enctype="multipart/form-data"></form>
          </div><!-- close of wrapper clearfix-->
        </div><!--close of trailcontainer column-75--> 

      </div>

    </div>
    <div class="footeractive">

     <div class="big">scen.ic</div>

     <div class="footerlinks column-100">
       <ul class="column-75">
        <li><a href="newtrail.html">Add New</a></li><li><a href="map.html">Map</a></li><li><a class="active" href="trailsindex.html">Trails</a></li><li><a href="profile.html">Profile</a></li></ul></div>
