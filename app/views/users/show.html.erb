     <div class="main" ng-controller="ProfileController">

      <div class="periscope">
      
          <h1 class="trailname"><img class="profilephoto" src="{{user.photo}}"></h1>
      </div>
      <div class="bendychairactive clearfix">

          <div class="sidebar">
            <ul><li>{{user.name}}</li>
             <li><a href="#">Hiked: {{distance.toFixed(1)}} Miles</a></li>
             <li><a href="#">Ranked (2)</a></li>
             <li><a href="#">Ave Rating: 8.6</a></li>
             <li ng-click="changeBookmarkView('added')" class="seeadded"><a href="#">{{user.trails.length}} Added <i class="fa fa-upload blue"></a></i></li>
             <li ng-click="changeBookmarkView('completed')" class="seecompleted"><a href="#">{{(user.bookmarks|filter: {completed:true}).length}} Completed <i class="fa fa-check circle green"></a></i></li>
             <li ng-click="changeBookmarkView('faved')" class="seefaved"><a class="current" href="#">{{(user.bookmarks|filter: {favourited:true}).length}} Favourited <i class="fa fa-heart red"></a></i></li>
          </ul>
                  

              </div>
              <div class="usercontent">

<div class="profile_trailphotos column-100" ng-show="bookmarkchoice == 'showfaved'">

