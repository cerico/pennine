              </div> <!-- close of footerright-->
            </div><!-- close of photofooter-->
          </div><!-- close of eachphoto -->
        
        </div><!-- close of profile_trailphotos-->      
        

  <div class="profile_trailphotos column-100" ng-show="bookmarkchoice == 'showcompleted'">
